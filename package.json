{
  "name": "@qworum/qworum-for-web-pages",
  "description": "Qworum JavaScript library for use inside web pages on web browsers.",
  "version": "1.0.9",
  "author": "DoÄŸa Armangil <d.armangil@qworum.net>",
  "module": "./esm/qworum-for-web-pages.js",
  "exports": {
    ".": "./esm/qworum-for-web-pages.js"
  },
  "types": "./esm/qworum-for-web-pages.d.ts",
  "files": [
    "./esm/*.js",
    "./esm/*.d.ts"
  ],
  "keywords": [
    "qworum",
    "framework",
    "platform",
    "distributed"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url" : "https://github.com/doga/qworum-for-web-pages.git"
  },
  "scripts": {
    "generate-docs" : "jsdoc --configure jsdoc.json --verbose",
    "create-types"  : "tsc",
    "skypack-check" : "npx package-check",
    "build"         : "npm run skypack-check && npm run create-types && npm run generate-docs && date",
    "publish-to-npm": "npm publish --access public"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "jsdoc-fresh"           : "^2.0.1",
    "typescript"            : "^4.9.4"
  }
}
