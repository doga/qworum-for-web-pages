{
  "source": {
    "include": [
      "qworum-for-web-pages.mjs"
    ],
    "includePattern": "(.mjs|.js)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "homepageTitle": "Qworum JavaScript library for web pages",
      "title": "Qworum JavaScript library for web pages",
      "default_theme": "dark"
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
